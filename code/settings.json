{
  "window.zoomLevel": -1,
  "editor.fontFamily": "'Dank Mono', 'Operator Mono', 'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.letterSpacing": 0.5,
  "workbench.editor.tabSizing": "shrink",
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.wordWrap": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "solid",
  "editor.colorDecorators": false,
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/node_modules": true
  },
  "workbench.editor.tabCloseButton": "right",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
  },
  "editor.snippetSuggestions": "top",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "atomKeymap.promptV3Features": true,
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.options": {
    "extensions": [
      ".html",
      ".js",
      ".jsx",
      "typescript",
      "typescriptreact"
    ]
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "color-highlight.markerType": "dot-after",
  "color-highlight.matchWords": true,
  "files.insertFinalNewline": true,
  "git.enableCommitSigning": true,
  "html.format.indentInnerHtml": true,
  "javascript.format.enable": false,
  "terminal.explorerKind": "integrated",
  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.fontSize": 14,
  "workbench.statusBar.visible": true,
  "editor.fontLigatures": true,
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.shell.osx": "fish",
  "javascript.validate.enable": false,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": true,
  "workbench.editor.labelFormat": "short",
  "git.autofetch": true,
  "npm.enableScriptExplorer": true,
  "workbench.list.keyboardNavigation": "simple",
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.colorTheme": "SynthWave '84",
  "editor.suggestSelection": "first",
  "vscode_custom_css.imports": [
    "https://raw.githubusercontent.com/robb0wen/synthwave-vscode/master/synthwave84.css"
  ],
  "editor.largeFileOptimizations": false,
  "keyboard.touchbar.enabled": false,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "csharp.format.enable": false,
  "csharp.suppressDotnetInstallWarning": true,
  "csharp.suppressDotnetRestoreNotification": true,
  "editor.cursorSurroundingLines": 3,
  "editor.autoClosingBrackets": "languageDefined",
  // when working using an external monitor
  /*
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  /**/
  // starbucks - apparently i'm blind sometimes
  /*
  "window.zoomLevel": 0,
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  /**/
}
