# keep a log of installed brew files
function brewfile {
  echo '> 1/2 Generating Brewfile'
  brew bundle dump --force
  echo '> 2/2 Moving Brewfile'
  mv brewfile ~/dot-dotfiles/Brewfile
  echo '> Done üëå'
}
alias installBrewfile='brew bundle --file=~/dot-dotfiles/Brewfile'

function brewup {
  echo '> 1/6 Updating Homebrew üì¶'
  brew update
  echo '> 2/6 Checking Homebrew for issues ‚õîÔ∏è'
  brew doctor
  echo '> 3/6 Getting a list of oudated packages üìú'
  brew outdated
  outdatedPackages="$(brew outdated --numstat | wc -l)"
  if (( $outdatedPackages > 0 ))
  then
    echo '> 4/6 Upgrading packages üöö'
    brew upgrade
  else
    echo 'No updates are available'
  fi
  echo "> 5/6 Removing dead symlinks üíÄ"
  brew prune
  echo '> 6/6 Cleaning up üöÆ'
  brew cleanup
  brew cask cleanup
  echo '> Done. üéâ'
}


